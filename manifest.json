{
  "name": "Remote for Slides",
  "description": "Slides can be operated remotely.",
  "version": "1.7",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": ["https://remote.yumekiti.net/*", "https://slidesync.yumekiti.net/*"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://remote.yumekiti.net/*",
    "https://slidesync.yumekiti.net/*"
  ],
  "action": {
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}
